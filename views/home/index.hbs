
 <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Github Issues</span>
          <p>a collection of github issues</p>
        </div>
      </div>
    </div>
  </div>
  <table class="responsive-table striped">
        <thead>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Comments</th>
          <th>State</th>
          <th>Created</th>
        </thead>
        <tbody>
  {{#if issues.length}}
    {{#each issues}}
    <tr>
      <td>{{this.id}}</td>
      <td><a href="{{this.url}}" target="_blank">{{this.title}}</a></td>
      <td>{{this.description}}</td>
      <td>{{this.comments}}</td>
      <td>{{this.state}}</td>
      <td>{{this.createdAt}} {{this.time}}</td>
    </tr>
    {{/each}}
    {{/if}}
        </tbody>
      </table>
            